#task task_classes.py

from datetime import datetime


class Homework:
    def __init__(self, text, deadline):
        self.text = text
        self.deadline = datetime.timedelta()
        self.created = datetime.datetime()

    def is_active(self):
        if self.created > self.deadline:
            return False
        else:
        return True


class Student:
    def __init__(self, first_name, last_name):
        self.first_name = first_name
        self.last_name = last_name

    def do_homeworks(self) :
        for homework in self.homeworks:
            if Homework.is_active()==False:
                print('You are late')


